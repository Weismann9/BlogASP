@model IEnumerable<BlogASP.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Comments</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Comment", new { postId = ViewData["postId"] }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created_at)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Comment", new { id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", "Comment", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Comment", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
